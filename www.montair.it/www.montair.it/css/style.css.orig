.slideshow_1 {
	height: 328px;
	width: 260px;
	float: left;
	overflow: hidden;
}

.slideshow_2_content {
	height: 328px;
	width: 764px;
	float: left;
	overflow: hidden;
}

.slideshow_2 {
	height: 328px;
	width: 764px;
}

.slideshow_2_preload {
	position: absolute;
	height: 328px;
	width: 764px;
	background-image: url(../images/loader.gif);
	background-repeat: no-repeat;
	background-position: center center;
}

.slideshow_titolo {
	text-align: left;
	font-family: Arial;
	font-size: 30px; 
	line-height: 24px;
	margin-left: 27px;
	margin-top: 40px;
	color:#FF0000;
	position: absolute;
	z-index: 100;
}

