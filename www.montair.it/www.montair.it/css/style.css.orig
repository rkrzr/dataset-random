#nav {
	position: absolute;
	z-index: 100;
	margin-top: 290px;
	margin-left: 700px;	
}

#nav a {
	display: block;
	float: left;
	width: 14px;
	height: 13px;
	background-image: url(../images/pallino.png);
	background-repeat: no-repeat;
	background-position: top left;
	margin-right: 4px;
}

#nav a:hover,
#nav .activeSlide {
	display: block;
	float: left;
	width: 14px;
	height: 13px;
	background-image: url(../images/pallino_sel.png);
	background-repeat: no-repeat;
	background-position: top left;
	margin-right: 4px;
}

#nav a span{
	display: none;
}

