#sportWrapper{
	width:540px;
	margin:0 auto;
	background-color:#000;
	padding-bottom: 7px;
}
.sportLinks, .seasonSelect{
	text-align:center;
	padding:4px;
	color:#969696;
}
.sportLinks a, .sportLinks a:link, .sportLinks a:hover, .sportLinks a:visited, .sportLinks a:active{
	padding: 4px;
	font: normal 12px Arial, Helvetica, sans-serif;
	color:#000;
}
.seasonSelect{
	padding-top:3px;
	background:url(/images_web/changeSeasonBoxBg.jpg) repeat-y 0 0px transparent
}
.sportNav {
	padding:0px 5px;
}
#sportTitle{
	background:#000;
	color:#FFFFFF;
	font-size:19px;
	font-weight:bold;
	height:25px;
	line-height:25px;
	text-align:center;
}

.seasonSelect select,.seasonSelect input {
	font-size:10px;
	margin:2px;
}

.standTable{
	color:#FFF;
	text-align:center;
	padding:3px 3px 0px 3px;
	font-weight:bold;
}
.standTable span{
	padding-left:5px;
}
.changeSeasonBox form{
	margin:0px;
	padding:5px 0px;
	text-align:center;
}
.e{
	background-color:#E5ECF2;
}
