$('document').ready(function(){

    //Mega nav
    function expand_mega() {
    $(this).children('.sys_megaDrop').slideDown();
    $(this).addClass('active');
    };
    function hide_mega() {
    $(this).children('.sys_megaDrop').hide();
    $(this).removeClass('active');
    };
    var config_mega = {
    interval: 200,
    over: expand_mega, // function = onMouseOver callback (REQUIRED)
    timeout: 200, // number = milliseconds delay before onMouseOut
    out: hide_mega // function = onMouseOut callback (REQUIRED)
    };
    $('.megaLi').hoverIntent(config_mega); 

}); // end doc ready