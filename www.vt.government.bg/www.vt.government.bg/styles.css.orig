body, table, input, textarea, select{
	font-family:Verdana, Arial, Helvetica, sans-serif;
	font-size: 8pt; 
}

#menu{font-size:8pt;}
#menu a{font-weight: bold;}
#menu a:hover{color: #CC0000; text-decoration: none;}
#menu a.sel{color: #CC0000;}

#menu .m1{background-color: #FDF8E3;}
#menu .m2{background-color: #FDF8E3;}
#menu .m3{background-color: #FDF8E3;}
#menu .m4{background-color: #EEF5FD;}
#menu .m5{background-color: #EEF5FD;}


#col_element{border-top: 1px Solid #FFFFFF;}
#col_element a:hover{ color: #E1921B; text-decoration: none;}
#col_element .title{
	background-image: url(images/triangle_w.gif);
	background-repeat: no-repeat;
	background-position: bottom left;
	background-color: #F19914;
	border: 1px Solid #F19914;
	font-size: 11px;
	font-weight: normal; 
	font-variant: small-caps;
	padding: 2px 3px 2px 10px; 
	letter-spacing: 1px;
	color: White;
}

#col_element_main .title{
	/*background-color: #94BCD7;
	border: 1px Solid #94BCD7;*/
	background-color: #FDF8E3;
	border: 1px Solid #FDF8E3;
	background-image: url(images/triangle_m.gif);
	color: #CC0000;
	border-top-color: #C6C6C6;
}

#col_element_middle .title{
	/*background-color: #B1B8B1;
	border: 1px Solid #B1B8B1;*/
	background-color: #EEF5FD;
	border: 1px Solid #EEF5FD;
	background-image: url(images/triangle_m.gif);
	color: #000000;
	border-top-color: #C6C6C6;
}

.devider {
	height: 1px; 
	padding: 0px; 
	background-image: url(images/divider.gif);
}

.devider_big {
	height: 15px;
	background-color: #FDF8E3;
}

.divider_common {
	height: 3px;
}

.row_first { 
	text-align: right; 
}
.row_second { 
	text-align: left;
}

hr{
	height: 0;
	border: 0;
	border-top: 1px Solid #CC0000;
	margin: 0;
	padding: 0;
}

.title {
	font-size:16px;
	font-style:normal;
	font-weight: bold
}

.big {
	font-size:25pt;
	font-style:normal;
	font-weight: normal
}

.normal {
	font-size:13px;
}

.normalb {
	font-size:10pt;
	font-weight:bold;
}

.small {
	font-size:8pt;
}

.small_grey, h1 {
	font-size:8pt;
	color: #666666;
	font-weight: bold;
}

h1 { margin: 0; line-height: 20px; }
h2 { font-size: 12pt; font-weight: bold; color: #666666; }
h3 { font-size: 10pt; font-weight: bold; color: #666666; }

.note2 { display: block; margin: 7px 0; padding: 1px 10px 15px 10px; background: #efefef; }
.note2 h2 { color: #666666; }
table.lists tr td { padding: 2px; }
li {  padding: 3px 0; }

.smallb {
	font-size:8pt;
	font-weight: bold;
	color: #003366;
}

a {
	text-decoration: none; 
	color: #003366;
}

a:hover {
	text-decoration: underline; 
	color: #000000;
}
				
a.menu {
	text-decoration: none; 
	color: #003366;
}

a.menu:hover {
	text-decoration: none; 
	color: #CC0000;
}
				
a.main-menu {
	text-decoration: none; 
	color: #003366;
}

a.main-menu:hover {
	text-decoration: none; 
	color: #CC0000; 
	font-weight: bold;
}
				
a.menu_head {
	text-decoration: none; 
	color: #000000;
}
a.menu_head:hover {
	text-decoration: none; 
	color: #CC0000;
}
			
a.menu_black {text-decoration: none; color: #000000;}
a.menu_black:hover {text-decoration: none; color: #000000;}
				
a.menu4:hover {text-decoration: none;font-weight: normal; color: #FF9900;}
a.menu4 {text-decoration: none;font-weight: normal; color: #0093DD;}

a.news { text-decoration: none; color: #003366; }
a.news:hover { text-decoration: none; color: #000000; }
						
.textboxes { font-size: 8pt; }

.box {
	font-size: 8pt; 
	background-color: #efefef; 
	border-top: 1 solid #CCCCCC;
	border-left: 1 solid #CCCCCC;
	border-right: 1 solid #CCCCCC;
	border-bottom: 1 solid #CCCCCC;
}

.box2 { 
	font-size: 8pt; 
	background-color: #FFFFFF; 
	border-top: 1 solid #CCCCCC; 
	border-left: 1 solid #CCCCCC; 
	border-right: 1 solid #CCCCCC; 
	border-bottom: 1 solid #CCCCCC; 
}

.head1 {
	font-size: 11px; color: #000000; 
	font-weight: normal; 
	font-variant: small-caps
}
.verysmall { font-size:7pt; }
.smallRed { font-size:8pt; color: #CC0000}

#col_element a.white{color: White;}
#col_element a.white:hover{color: #D20000;}

/* Articles */
.group {
	margin-left:15px;
	padding-left: 5px;
	/*border-left: 1px solid #FF0000;*/
}

.group_title { 
	height: 30px; 
	font-weight: bold;
	font-size:10pt;
	margin-top: 20px;
	color:#0D337B;
}

.article_title { 
	font-weight: bold; 
	padding: 5px;
	background: #DEDEDE;
}

.article_text { 
	padding-left: 10px;
	padding-right: 10px;
	/*border:1px solid #DEDEDE;*/
	color: #555555;
}

.note { 
	color:#CC0000;
}

.back {
	text-align: right;
	padding-right: 10px;
	font-size: 8pt;
	margin-bottom:3px;
}

a.back {
	padding: 2px;
	border:1px solid #DEDEDE;
}

a:hover.back {
	border:1px solid #CCCCCC;
	text-decoration:none;
	color:#666666;
}

.button { 
  display:block;
  width: 100px;
  height: 30px;
  border: 1px solid #888888;
  background: #F19914;
  color: #ffffff;
}

.anticorruption {
  padding-left: 3px; 
  padding-right: 3px;
  text-align: left;
}

table.underlined_rows { margin-left: 40px; }
table.underlined_rows td { border-bottom: 1px solid #FFFFFF; }

.item { display: block; border-bottom: 1px dotted silver; padding-bottom: 20px; margin: 10px 0; }
.date { font-size: 0.9em; color: red;}
.item_text { font-size: 1em; }
.files { margin: 10px 20px; padding: 20px; background-color: #efefef; border-radius: 10px; }
.files a { display: block; margin: 10px 0; }
