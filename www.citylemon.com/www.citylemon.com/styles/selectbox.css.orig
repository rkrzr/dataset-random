FORM#tagbox { position:relative; }

/*Select plaats */
div.selectbox2-wrapper {
	position:absolute;
	right:-45px;
	top:32px;
  width:171px;
  background-color:white;
  margin:0px;
  border:0;
  margin-top:-10px;
  padding:0px;
  text-align:left;
  max-height:200px;
  overflow:auto;
    z-index:200;
}

/*Drop down list styles*/
div.selectbox2-wrapper ul {
  list-style-type:none;
  margin:0px;
  padding:0px;
}
/* Selected item in dropdown list*/
div.selectbox2-wrapper ul li.selected {
  background-color: #333333;/*#f1941d;*/
}

/* Hover state for dropdown list */
div.selectbox2-wrapper ul li.current {
  background-color: #333333;
}

/* Drop down list items style*/
div.selectbox2-wrapper ul li {
  list-style-type:none;
  display:block;
  margin:0;
  padding:2px;
  cursor:pointer;
	cursor: hand;
	background:#7a7a7a;
	color:#FFF;
	font-family: 'Lucida Grande', Arial, Helvetica, sans-serif;
	font-size:10px;
}

/* Look and feel of select box */
.selectbox2
{
	position:absolute;
	right:-50px;
	top:0px;
	margin:0;
	margin-right:5px;
	margin-bottom:10px;
	padding:0 0 0 8px;
	font-family:'Lucida Grande', Geneva, Arial, Helvetica, sans-serif;
	font-size:10px;/* Resize Font*/
  	width : 171px; /* Resize Width */
  	height:24px;
  	display : block;
	border:0;
  	text-align:left;
  	background: url('../images/bg-selectbox.gif') left no-repeat;
  	cursor: pointer;
	cursor: hand;
  	color:#black;
  	z-index:1;
}
