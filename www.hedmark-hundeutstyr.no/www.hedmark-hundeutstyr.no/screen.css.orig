body {
	font-family: sans-serif;
	font-size: 80%;
	color: #333;
	width: 640px;
	margin: 12px auto;
}

h2 {
	margin-left: 12px;
	margin-right: 12px;
}

p, pre, ul {
	margin-left: 18px;
	margin-right: 18px;
}

h1 {
	border-bottom: 1px solid #888;
	font-size: 120%;
}

h2 {
	font-size: 100%;
}

a {
	color: #396fbf;
	text-decoration: none;
	font-weight: bold;
}

address {
	border-top: 1px solid #888;
	height: 100px;
	background-image: url(logo.gif);
	background-repeat: no-repeat;
}

pre {
	border: 1px dotted #bbb;
	background-color: #eee;
	padding: 4px;
}
